<h2>Available drones</h2>

{{#each drones}}
    <h2>Name: {{this.name}}</h2>
    <p>Propellers: {{this.propellers}}</p>
    <p>Speed: {{this.maxSpeed}}</p>
    <a href="/drones/{{_id}}/edit">Edit drone</a>
    <form method="POST" action="/drones/{{_id}}/delete">
    <button>Delete drone</button>
    </form>
{{/each}}